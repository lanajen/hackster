function getNewSelection() {
  var selection = retrieveSelection();
  var oldPos = curPos;
  var oldNode = curNode;
  curPos = selection.extentOffset;
  curNode = selection.focusNode;
  if (oldPos == curPos && oldNode == curNode) return;
  return selection;
}

function getSelectionStart() {
