function formatLinks(nodes) {
  var regex = /( ?)(<a[^>]+>[^<]+<\/a>)( ?)/g;
  var replacer = function(match, p1, p2, p3, offset, string){
    var out = '';
    if (p1) out += '&nbsp;';
    out += p2;
    if (p3) out += '&nbsp;';
    return out;
  };
  nodes.each(function(){
    $(this).html($(this).html().replace(regex, replacer));
  });
}

