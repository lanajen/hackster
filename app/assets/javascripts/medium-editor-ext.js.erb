function prepareForInputs(hash, previousKey, out){
  out = out || {};

  $.each(hash, function(key, val){
    if (/^[^\[]/.test(key)) key = '[' + key + ']';
    if (typeof(val) == 'object') {
      out = prepareForInputs(val, key, out);
    } else {
      nowKey = previousKey ? previousKey + key : key;
      out[nowKey] = val;
    }
  });

  return out;
}

