= link_to "#{content_tag(:i, '', class: 'fa fa-share')} Share".html_safe, '#', onclick: "openPopup('#embed-popup');return false;"

= content_for :js do
  #embed-popup
    .embed-popup-outer
      .embed-popup-inner
        %button.close{ onclick: "closePopup('#embed-popup');" } &times;
        %h3.top Share
        = render 'projects/share_by_author'
        %h3 Embed the widget on your own site
        #project-embed= render partial: 'projects/project_embed_thumb', locals: { project: @project }
        %p Add the following snippet to your HTML:
        %textarea.embed-code{ onclick: "this.select();" }
          %iframe{frameborder: "0", height: "321", scrolling: "no", src: "#{project_embed_url(@project)}", width: "220"}

  :javascript
    $('#embed-popup').click(function(e){
      e.preventDefault();
      $(this).fadeOut(200);
      return false;
    }).children().click(function() {
      return false;
    });
    function openPopup(id) {
      $(id).fadeIn(200);
      return false;
    }
    function closePopup(id) {
      $(id).fadeOut(200);
      return false;
    }

