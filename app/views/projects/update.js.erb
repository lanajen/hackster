<%- if @refresh %>
  window.location.replace('<%= url_for(@project) %>');
<% else %>
  $('.project .display').html('<%= escape_javascript render('teaser') %>');
  $('.project .edit').slideUp(function(){
    $('.project .display').slideDown(function(){
      $('#display-share-box').tooltip('show');
      window.setTimeout(function(){ $('#display-share-box').tooltip('hide'); }, 10000);
    });
  });
<% end %>