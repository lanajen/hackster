#software-parts-form
  ul.list-unstyled.parts-widget.software-parts-widget
    - project.software_part_joins.new if project.software_part_joins.empty?
    - project.software_part_joins.each do |part|
      = f.simple_fields_for :software_part_joins, part, wrapper: false do |f_part|
        = render partial: 'projects/forms/software_part', locals: { f: f_part, part: part }
    = f.link_to_add 'Add another app', :software_part_joins, class: 'btn btn-success btn-sm btn-block'

= content_for :js do

  #new-software-modal.modal.fade*{ 'aria-hidden' => "true", 'aria-labelledby' => "new-par-modal-label", role: "dialog", tabindex: "-1" }
    .modal-dialog
      .modal-content
        .modal-header
          button.close data-dismiss="modal" type="button"
            span aria-hidden="true"  ×
            span.sr-only Close
          h4#new-par-modal-label.modal-title Create a new app
        .modal-body
          = simple_nested_form_for Part.new, url: '/api/v1/parts', html: { id: 'new-software-part-form', class: 'form-horizontal accept-file-upload remote', data: { remote: true } }, wrapper: :bootstrap3_horizontal do |f|
            = f.error_notification
            = f.input :type, as: :hidden, input_html: { value: 'SoftwarePart' }
            = f.input :name, input_html: { class: 'reset' }
            = f.input :product_page_link, label: 'Link to product page', input_html: { class: 'reset' }

            .row
              .col-md-8.col-md-offset-4
                = f.submit 'Save app and add to list', class: 'btn btn-primary'
                = link_to 'Cancel', '#', class: 'btn btn-link btn-sm', 'data-dismiss' => "modal"

  / = tinymce_assets
  / javascript:
      tinyMCE.init({
        selector: 'textarea.text-editor',
        toolbar: "undo redo | bold italic underline | link unlink | bullist numlist",
        menubar: false,
        plugins: 'link paste',
        statusbar: false,
        height: 150
      });

  javascript:
    $select2containersSoft = {};
    $select2targetSoft = null;

    $(function(){
      var select2OptionsSoft = {
        placeholder: 'Select an app',
        minimumInputLength: 3,

        ajax: {
          url: "/api/v1/parts/autocomplete",
          dataType: 'json',
          delay: 250,
          data: function (params) {
            return {
              q: params.term, // search term
              page: params.page,
              type: 'SoftwarePart'
            };
          },
          processResults: function (data, page) {
            // parse the results into the format expected by Select2.
            // since we are using custom formatting functions we do not need to
            // alter the remote JSON data
            return {
              results: data
            };
          },
          cache: true
        }
      };

      $('#new-software-modal').on('show.bs.modal', function(e){
        var button = $(e.relatedTarget);
        $(this).find('#part_name').val(button.data('value'));

        $('#software-parts-form .select2-container--open').each(function(i, el){
          var select = $(el).prev();
          $select2targetSoft = select.attr('id');
          $select2containersSoft[$select2targetSoft].select2('close');
        });
      });

      $('#new-software-modal').on('shown.bs.modal', function(e){
        $(this).find('#part_name').focus();
      });

      $('#new-software-part-form').on('ajax:success', function(xhr, data, status){
        $('#' + $select2targetSoft).append('<option value="' + data.id + '">' + data.name + '</option>');
        $('#select2-' + $select2targetSoft + '-container').text(data.name);
        $select2containersSoft[$select2targetSoft].val(data.id).trigger('change');
        $('#new-software-modal').modal('hide');
        $(this).find('input.reset').val('');
        $select2targetSoft = null;
      });

      $('.pe-panel').on('ajax:complete', '.remote:not(#new-software-part-form)', function(xhr, data, status){
         setupSelect2();
      });

      function setupSelect2() {
        $('.software-parts-widget .select2').each(function(i, el){
          $select2containersSoft[el.id] = $(el).select2(select2OptionsSoft);
        });
      }
      setupSelect2();

      function resetPartPositions(){
        $('.software-parts-widget tr:not(.removed) input.position').each(function(i){
          $(this)
            .val(i+1)
            .trigger('change');
        });
      }

      $('.pe-panel').on('nested:fieldAdded', '.software-parts-widget', function(event){
        var select = $(event.target).find('.select2');
        $select2containersSoft[select.attr('id')] = $(event.target).find('.select2').select2(select2OptionsSoft);
        resetPartPositions();

        // the blueprint has white spaces and they're copied over when adding a field
        $(event.target).find('textarea').val('');
      })

      $('.pe-panel').on('click', '.software-parts-widget .reveal', function(e){
        e.preventDefault();
        var parent = $(this).closest('tbody');
        var target = parent.find('[data-name="' + $(this).data('target') + '"]');
        var panel = $(this).closest('.pe-panel');
        target.slideDown();
        var li = $(this).closest('li');
        var ul = li.closest('ul');
        var tr = ul.closest('tr');
        li.remove();
        if (ul.children().length == 0) {
          tr.remove();
        }
      });

      $('.pe-panel').on('click', '.move-up', '.software-parts-widget', function(e){
        e.preventDefault();
        var parent = $(this).closest('.fields');
        if (parent.prev().length) {
          parent.insertBefore(parent.prev());
        }
        resetPartPositions();
      });

      $('.pe-panel').on('click', '.move-down', '.software-parts-widget', function(e){
        e.preventDefault();
        var parent = $(this).closest('.fields');
        if (parent.next().length) {
          parent.insertAfter(parent.next());
        }
        resetPositions();
      });
    });