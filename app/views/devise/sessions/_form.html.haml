= simple_form_for(@new_user_session, url: new_user_session_path) do |f|
  = f.input :email, required: false, autofocus: true, placeholder: 'Email', label: false
  = f.input :password, required: false, placeholder: 'Password', label: false
  = f.input :remember_me, as: :boolean, inline_label: 'Remember me', label: false
  = f.button :submit, "Sign in", class: 'btn-block btn'