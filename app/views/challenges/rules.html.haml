%section#teaser{ style: "background-image: url(#{@challenge.cover_image})"}
  #teaser-container.wrapper700
    %h1= @challenge.name

%section#rules
  .wrapper
    %h2 Challenge description
    = @challenge.description.html_safe

    %h2 Prizes
    .row
      - @challenge.prizes.each do |prize|
        .col-xs-12.col-md-6
          %strong
            %i.fa.fa-gift
            = prize.name
          %p= prize.description

    %h2 Eligibility
    = @challenge.eligibility.html_safe

    %h2 Requirements
    = @challenge.requirements.html_safe

    %h2 Judging criteria
    = @challenge.judging_criteria.html_safe

    %h2 How to enter
    = @challenge.how_to_enter.html_safe

    %h2 Full rules
    = @challenge.rules.html_safe