= simple_form_for [@event, @page], url: url_for_wiki_page_form(@event, @page), html: { class: 'widget-form' } do |f|
  = f.error_notification

  = f.input :title
  .form-group
    .controls
      %label Page content
      = render 'shared/wysihtml5_toolbar'
  = f.input :body, as: :text, input_html: { id: 'wysihtml5-textarea', rows: 10, style: 'height: 200px;' }, label: false
  = f.input :private, label: 'Hide this page from the navigation bar'

  .form-actions
    = f.submit class: 'btn btn-primary'
    = link_to 'Cancel', event_path(@event), class: 'btn btn-link btn-sm'