.code-widget
  .button-content-container
    .button-content
      h5= widget.name
      .buttons
        - if widget.formatted_code.present?
          button.btn.btn-primary.btn-sm.copy-code
            ' Copy to clipboard
        - if document = widget.document and document.file_url.present?
          a.btn.btn-primary.btn-sm href=document.file_url
            ' Download

  - if widget.comment.present?
    .comment= plain_to_html(widget.comment)

  - unless widget.binary?
    - if widget.formatted_code.present?
      .code-container= raw widget.formatted_code
    - else
      p No code.