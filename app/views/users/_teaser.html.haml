.row
  .span12.teaser
    .pull-left.avatar.main-avatar= image_tag @user.avatar(:medium), alt: @user.name
    .pull-left.text-holder
      %h1= @user.name

      - if @user.mini_resume.present?
        %p.user-mini-resume= @user.mini_resume
      - elsif user_is_current?
        %p.user-mini-resume
          No mini resume.
          = link_to 'Add one?', profile_edit_path, data: { remote: true }

      - if @user.location
        %p.user-categories
          %i.fa.fa-map-marker
          = @user.location
      - elsif user_is_current?
        %p.user-categories
          %i.fa.fa-map-marker
          No location.
          = link_to 'Add one?', profile_edit_path, data: { remote: true }

      - if @user.websites.any?
        %ul.websites
          - @user.websites.each do |type, url|
            %li= render partial: 'website', locals: { type: type, url: url }
      - elsif user_is_current?
        %ul.websites
          %li
            No websites.
            = link_to 'Add some?', profile_edit_path, data: { remote: true }

    - if user_is_current?
      = link_to 'Edit', profile_edit_path, class: 'btn-edit', data: { remote: true }
    -# if current_user.id != @user.id
      - if current_user.try(:is_following?, @user)
        = link_to 'Following', user_followers_path(@user), method: :delete, class: 'btn-inverse btn-follow'
      - else
        = link_to 'Follow', user_followers_path(@user), method: :post, class: 'btn-follow'