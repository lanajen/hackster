.clearfix
  h1.section-title.pull-left Devices and appliances built by companies powered by #{@platform.name}
  - if can? :manage, @group
    .pull-right
      = link_to content_tag(:i, '', class: 'fa fa-plus') + content_tag(:span, "Add device"), new_project_path(project: { platform_tags_string: @platform.name }, type: 'product'), class: 'btn btn-sm btn-default'

- if @projects.any?
  .row.project-list
    - @projects.each do |col|
      = render partial: 'projects/product_thumb', locals: { project: col.project }

  .row.text-center= will_paginate @projects
- else
  .row
    .col-xs-12
      p
        ' No devices here yet!