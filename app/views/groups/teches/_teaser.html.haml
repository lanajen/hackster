#content-header.with-nav
  .container
    .media
      - if @tech.avatar
        .pull-left
          %span.avatar.medium-avatar= image_tag @tech.avatar(:medium), class: 'media-object'
      .media-body
        %h1
          - if @tech.private?
            %small
              %i.fa.fa-lock.istooltip{ title: 'Private group', data: { container: 'body' } }
          = link_to @tech.name, tech_path(@tech)
        %p
          - if @tech.mini_resume.present?
            = @tech.mini_resume
          - elsif can? :update, @tech
            No mini resume.
            = link_to 'Add one?', edit_tech_path(@tech), data: { remote: true }

          - if @tech.websites.any?
            %ul.websites.list-inline
              - @tech.websites.select{|t,u| u.present? }.each do |type, url|
                %li= render partial: "shared/website", locals: { type: type, url: url }
          - elsif can? :update, @tech
            %ul.websites.list-inline
              %li
                No websites.
                = link_to 'Add some?', edit_tech_path(@tech), data: { remote: true }

    .row
      .col-xs-12
        .tabbable.tabs-left.navbar.navbar-default.navbar-tabs{ style: 'background: #fff;' }
          %ul.nav.navbar-nav
            %li.active= link_to "Projects", '#tab-projects', data: { toggle: 'tab' }
            -#
              %li.active= link_to "Public projects #{content_tag(:span, 0, class: 'badge')}".html_safe, '#tab-projects', data: { toggle: 'tab' }
              %li= link_to "Members #{content_tag(:span, 0, class: 'badge')}".html_safe, '#tab-members', data: { toggle: 'tab' }
            -# %li= link_to "Q&A #{content_tag(:span, 0, class: 'badge')}".html_safe, '#tab-qa', data: { toggle: 'tab' }

            - if can? :manage, @tech
              %li.dropdown
                %a.dropdown-toggle.action{ data: { toggle: 'dropdown' }, href: '#', title: 'Settings', rel: 'tooltip' }
                  %i.fa.fa-cog
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'Edit tech', edit_tech_path(@tech), data: { remote: true }