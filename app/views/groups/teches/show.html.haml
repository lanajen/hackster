.row.tab-content
  #tab-projects.tab-pane.active.fade.in
    .col-xs-12
      - if @projects.any?
        .row
          - @projects.each do |project|
            = render partial: 'projects/project_thumb', locals: { project: project.decorate, col: '3' }
      - else
        This technology isn't in used yet!


  #tab-activity.tab-pane.fade
    .col-xs-12
      %ul
        - @broadcasts.each do |broadcast|
          %li
            - broadcast = broadcast.decorate
            = link_to broadcast.broadcastable.name, broadcast.broadcastable
            = broadcast.message
            .muted
              = broadcast.created_at

  #tab-qa.tab-pane.fade
    .col-xs-12