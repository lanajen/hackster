.row.tab-content
  #tab-projects.tab-pane.active.fade.in
    .col-xs-12
      - if @projects.any?
        .row
          - @projects.each do |project|
            = render partial: 'projects/project_thumb', locals: { project: project.decorate, col: '3' }
      - else
        .row
          .col-xs-12
            %p
              This technology isn't in use yet!
              - if @tech.tech_tags.any?
                = link_to "Create the first #{@tech.name} project", new_project_path(project: { tech_tags_string: @tech.tech_tags.first.name }), class: 'btn btn-primary btn-sm'


  #tab-activity.tab-pane.fade
    .col-xs-12
      %ul
        - @broadcasts.each do |broadcast|
          %li
            - broadcast = broadcast.decorate
            = link_to broadcast.broadcastable.name, broadcast.broadcastable
            = broadcast.message
            .muted
              = broadcast.created_at

  #tab-qa.tab-pane.fade
    .col-xs-12