#sidebar-container.affixable
  - @tech = GroupDecorator.decorate @tech

  %section#sidebar-container-in
    - if @tech.avatar
      .avatar#tech-avatar-image{:style=>"background-image:url('#{@tech.avatar(:big)}');"}
    #tech-body
      %h3= link_to @tech.name, tech_short_path(@tech), id: 'tech-name'
      %p
        - if @tech.mini_resume.present?
          = @tech.mini_resume
        - elsif can? :update, @tech
          No mini resume.
          = link_to 'Add one?', edit_tech_path(@tech)
      #tech-follow-div
        - if user_signed_in? and member = current_user.is_active_member?(@tech)
          .text-center
            %span.badge You're a member
        - else
          - link = user_signed_in? ? group_accept_invitation_path(@tech) : new_user_registration_path(redirect_to: group_accept_invitation_path(@tech), reason: 'join', m: 'group', id: @tech.id)
          = link_to "Follow #{@tech.name}".html_safe, link, class: 'btn btn-info'

    .display
      %h4 Resources
      %ul#tech-links
        - if @tech.documentation_link.present?
          %li= link_to "Documentation #{content_tag(:i, '', class: 'fa-external-link fa')}".html_safe, @tech.documentation_link, target: '_blank'
        - if @tech.forums_link.present?
          %li= link_to "Forums #{content_tag(:i, '', class: 'fa-external-link fa')}".html_safe, @tech.forums_link, target: '_blank'
        - if @tech.crowdfunding_link.present?
          %li= link_to "Preorder #{@tech.name} #{content_tag(:i, '', class: 'fa-external-link fa')}".html_safe, @tech.crowdfunding_link, target: '_blank', class: 'tech-buy-link'
        - if @tech.buy_link.present?
          %li= link_to "Buy #{@tech.name} #{content_tag(:i, '', class: 'fa-external-link fa')}".html_safe, @tech.buy_link, target: '_blank', class: 'tech-buy-link'
        -# %li= link_to "Q&A #{content_tag(:span, 0, class: 'badge')}".html_safe, '#tab-qa', data: { toggle: 'tab' }
        /%li= render partial: 'projects/share'

    .display
      %h4 Social links
      #tech-websites
        - if @tech.websites.any?
          %ul.websites.list-inline
            - @tech.websites.select{|t,u| u.present? }.each do |type, url|
              %li= render partial: "shared/website", locals: { type: type, url: url }
        - elsif can? :update, @tech
          %ul.websites.list-inline
            %li
              No websites.
              = link_to 'Add some?', edit_tech_path(@tech)

    - if can? :manage, @tech
      .display
        %h4
          %i.fa.fa-cog
          Manage page
        %ul#tech-links
          %li= link_to 'Edit settings', edit_tech_path(@tech)
          %li= link_to 'Manage members', group_edit_members_path(@tech)
          %li= link_to 'Invite members', group_new_invitations_path(@tech)