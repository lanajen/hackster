= content_for :no_container do
  #heading.user
    .container
      .display= render 'teaser'
      .edit{ style: 'display:none;' }

  .navbar.navbar-static-top
    .navbar-inner
      .container
        %ul.nav
          %li.active
            = link_to 'Home', group_path(@group)
          %li
            = link_to 'Q&A', group_qa_path(@group)

  #content
    .container
      .row
        .span9
          .transparent-well
            .header
              %h4 Recent activity from members
            - if @broadcasts.any?
              .content
                %ul
                  - @broadcasts.each do |broadcast|
                    %li
                      - broadcast = broadcast.decorate
                      = link_to broadcast.broadcastable.name, broadcast.broadcastable
                      = broadcast.message
                      .muted
                        = broadcast.created_at

        .span3
          - if @group.users.any?
            .transparent-well
              .header
                %h4 Members
              .content
                %ul.unstyled
                  - @group.users.each do |user|
                    %a{ href: url_for(user) }
                      = image_tag user.decorate.avatar, style: 'width: 50px;'

          - if @group.projects.any?
            .transparent-well
              .header
                %h4 Member projects
              .content
                %ul.unstyled
                  - @group.projects.indexable.each do |project|
                    %a{ href: url_for(project) }
                      = image_tag project.decorate.logo(:thumb), style: 'width: 50px;'