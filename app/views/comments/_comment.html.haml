.comment{ class: "depth-#{comment.depth}" }
  .pull-left.comment-avatar
    - if comment.user_id.zero?
      = image_tag 'guest_default_100.png'
    - else
      = comment.user.decorate.avatar_link(:mini)
  .pull-left.comment-text
    %span.comment-author
      - if comment.user_id.zero?
        = comment.guest_name
      - else
        = link_to comment.user.decorate.name_link
    = auto_html(comment.body) { link(:target => 'blank') }.html_safe
    .text-muted.comment-date
      = time_ago_in_words(comment.created_at)
      ago
  - if can? :destroy, comment
    = link_to 'Delete', comment_path(comment), method: :delete, data: { remote: true, confirm: 'Are you sure you want to delete this comment?', hover: '.comment' }, class: 'btn-heading btn-delete default-hidden btn-heading-small'