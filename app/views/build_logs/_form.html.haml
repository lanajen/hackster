= simple_form_for [@project, @log], url: log_form_path_for(@project, @log), html: { class: 'widget-form' } do |f|
  = f.error_notification

  = f.input :title
  .form-group
    .controls
      %label What have you been up to?
      = render 'shared/wysihtml5_toolbar'
  = f.input :body, as: :text, input_html: { id: 'wysihtml5-textarea', rows: 10, style: 'height: 400px;' }, label: false

  .form-actions
    = f.submit class: 'btn btn-primary'
    = link_to 'Cancel', project_logs_path(@project.user_name_for_url, @project.slug), class: 'btn btn-link btn-sm'