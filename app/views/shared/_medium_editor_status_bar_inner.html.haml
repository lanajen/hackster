.pull-left
  .medium-status-left
    %span.medium-status
      Last edit
      = time_ago_in_words last_edit
      ago
    %span.medium-stop-edit.medium-status-recording
      %i.fa.fa-circle
      Editing (auto-save is on)
.pull-right
  = content_tag :button, 'Edit project details', class: 'btn btn-primary medium-start-edit'
  = content_tag :button, 'Finish editing', class: 'btn btn-success medium-stop-edit', style: 'display:none'
  .btn-group
    = link_to content_tag(:i, '', class: 'fa fa-cog'), edit_project_path(@project), class: 'btn btn-default', rel: 'tooltip', data: { container: 'body', placement: 'bottom' }, title: 'Edit settings'
    = link_to content_tag(:i, '', class: 'fa fa-group'), project_edit_team_path(@project), class: 'btn btn-default', rel: 'tooltip', data: { container: 'body', placement: 'bottom' }, title: 'Manage team'
.clearfix