- model_class = Quote
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:quantity)
      %th= model_class.human_attribute_name(:materials)
      %th= model_class.human_attribute_name(:manufacturer_preference)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:comments)
      %th= model_class.human_attribute_name(:manufacturer_comments)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @quotes.each do |quote|
      %tr
        %td= link_to quote.id, admin_quote_path(quote)
        %td= quote.quantity
        %td= quote.materials
        %td= quote.manufacturer_preference
        %td= quote.email
        %td= quote.name
        %td= quote.comments
        %td= quote.manufacturer_comments
        %td=l quote.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_quote_path(quote), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_quote_path(quote), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_quote_path, :class => 'btn btn-primary'