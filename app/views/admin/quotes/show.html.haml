- model_class = Quote
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:properties) + ':'
  %br
  = @quote.properties

%p
  %strong= model_class.human_attribute_name(:documents) + ':'
  %br
  - @quote.documents.each do |document|
    = link_to document.file.filename, document.file_url



.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_quotes_path, :class => 'btn btn-default'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_quote_path(@quote), :class => 'btn btn-default'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_quote_path(@quote), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
