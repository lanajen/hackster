- model_class = User
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th= model_class.human_attribute_name(:last_login)
      %th= model_class.human_attribute_name(:invited_by)
      %th= model_class.human_attribute_name(:invitation_link)
      %th= model_class.human_attribute_name(:pending_invite)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= link_to user.name, user if user.name
        %td=l user.created_at if user.created_at
        %td=l user.last_sign_in_at if user.last_sign_in_at
        %td= user.invited_by.try(:email)
        %td= link_to 'link', accept_user_invitation_url(:invitation_token => user.invitation_token) if user.invitation_token
        %td= user.invitation_sent_at if user.invitation_token.present?
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_user_path(user.id), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_user_path(user.id), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_user_path, :class => 'btn btn-primary'

.pagination
  = will_paginate @users