.row
  .span12
    .well
      .hero-unit{ style: 'margin: 0' }
        %h1 The collaboration tool for your hardware projects
        %ol
          %li Document
          %li Collaborate
          %li Make it real

.row
  .span12
    .well
      .header
        %h2 Featured projects
    %ul.thumbnails
      - @featured_projects.each do |project|
        %li.span3
          .thumbnail
            = link_to image_tag(project.image.file_url(:headline)), project if project.image
            .caption
              %h3= link_to project.name, project
              %p= truncate project.description, length: 100