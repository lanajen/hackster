          li= link_to 'Mentors and speakers', '#mentors', class: 'nav-link smooth-scroll', data: { target: '#mentors' }
          li= link_to 'What to expect', '#what', class: 'nav-link smooth-scroll', data: { target: '#what' }
          li= link_to 'Agenda', '#agenda', class: 'nav-link smooth-scroll', data: { target: '#agenda' }
