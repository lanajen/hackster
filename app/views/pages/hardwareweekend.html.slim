= content_for :js do
  = javascript_include_tag 'application'
  = javascript_include_tag 'flipclock'

  javascript:
    $(function(){
      var date  = new Date(Date.UTC(2015, 1, 20, 18, 0, 0));
      var now   = new Date();
      var diff  = date.getTime()/1000 - now.getTime()/1000;

      var clock = $('#about .countdown .inner').FlipClock(diff, {
        countdown: true,
        clockFace: 'DailyCounter'
      });
    });

  #myModal.modal.fade*{ 'aria-hidden' => "true", 'aria-labelledby' => "myModalLabel", role: "dialog", tabindex: "-1" }
    .modal-dialog
      .modal-content
        .modal-header
          button.close data-dismiss="modal" type="button"
            span aria-hidden="true"  Ã—
            span.sr-only Close
          h4#myModalLabel.modal-title Check back soon!
        .modal-body
          p This event isn't open for registration yet. Sign up to our newsletter below to be alerted when it does!
          form#mc-embedded-subscribe-form.form-inline action="//hackster.us7.list-manage.com/subscribe/post?u=3fd72855783c7f1a97812d84e&amp;id=6ff81e3e5b" method="post" name="mc-embedded-subscribe-form" novalidate="" target="_blank"
            .form-group
              input#mce-EMAIL.form-control name="EMAIL" placeholder="nikola.tesla@hackster.io" type="email" value="" style=("width:200px;margin-right:10px;")
            /! real people should not fill this in and expect good things - do not remove this or risk form bot signups
            input name="b_3fd72855783c7f1a97812d84e_6ff81e3e5b" style=("position: absolute; left: -5000px;") tabindex="-1" type="text" value=""
            input#mc-embedded-subscribe.btn.btn-primary.btn-sm name="subscribe" type="submit" value=("Sign up")

