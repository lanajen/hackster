            .col-sm-6.category-row
              - lists.each do |list|
                .category-col
                  .thumb.category-thumb
                    .thumb-image.has-link-overlay style="background-image:url(#{list.decorate.cover_image})"
                      = link_to '', list, class: 'link-overlay'
