= simple_form_for [@project, @thread_post], html: { class: 'form-horizontal' } do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    .control-group
      .controls
        = render 'wysihtml5_toolbar'
    = f.input :body, input_html: { id: 'wysihtml5-textarea' }

  .form-actions
    = f.button :submit
    = link_to 'Cancel', project_discussions_path(@project), class: 'btn btn-link'
