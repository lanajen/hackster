= simple_form_for [@threadable, @thread_post], html: { class: 'form-horizontal' } do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :body, input_html: { id: 'wysihtml5-textarea', rows: 10 }

  .form-actions
    .form-actions-inner
      = f.button :submit
      -# = link_to 'Cancel', project_issues_path(@project), class: 'btn btn-link'
