.well.blog-post
  .header
    %h3
      = link_to issue.title, url_for([issue.threadable, issue])

      .btn-edit
        - if can? :edit, issue
          = link_to 'Edit', url_for([:edit, issue.threadable, issue]), class: 'btn btn-link btn-sm'
          - if issue.unresolved?
            = link_to 'Mark resolved', issue_update_workflow_path(issue, event: :resolve, redirect_to: request.path), method: :patch, class: 'btn btn-link btn-sm'
          - else
            = link_to 'Reopen', issue_update_workflow_path(issue, event: :reopen, redirect_to: request.path), method: :patch, class: 'btn btn-link btn-sm'

    .text-muted on #{issue.threadable.class} #{issue.threadable.name}
    -# .more
      - user = issue.user.decorate
      = image_tag user.avatar(:mini)
      = link_to user.name, user
      = l issue.created_at, format: :long
      %span.text-muted #{issue.comments.size} comments

  .content
    = issue.body.html_safe