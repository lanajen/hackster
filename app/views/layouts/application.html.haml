!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= title
    %meta(name="description" content="#{meta_desc}")
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    <link href="#{ asset_path 'favicon.ico' }" rel="shortcut icon" type="image/vnd.microsoft.icon">
    - unless current_user and current_user.is? :admin
      = render partial: 'application/analytics', locals: { tracker: 'UA-11926897-15', domain: 'hackster.io' }

  %body
    #wrapper
      -# raise params[:controller].to_s + ' ' + params[:action].to_s
      - if !user_signed_in? and (params[:controller] == 'projects' or params[:controller] == 'users') and params[:action] == 'show'
        #hello-world.fade-in
          .container
            %button.close{ data: { close: '#hello-world' } } &times;
            Hackster.io is the place where hardware hackers showcase their projects. Sounds cool?
            = link_to 'Request an invite.', 'http://www.hackster.io'
      .navbar.navbar-static-top
        .navbar-inner
          .container{ style: 'position: relative;' }
            %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to image_tag('hackster_logo_20.png'), root_path, class: 'brand'
            .container.nav-collapse
              -# .pull-left= render 'application/search_form'
              %ul.nav
                %li= link_to 'Showcase a project', new_project_path
                - if user_signed_in? and current_user.is? :admin
                  %li= link_to 'Admin', admin_users_path
              %ul.nav.pull-right
                - if user_signed_in?
                  .btn-group
                    = link_to image_tag(current_user.decorate.avatar(:mini), style: 'width:30px'), current_user
                    %button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
                      %span.caret
                    %ul.dropdown-menu.pull-right
                      %li= link_to current_user.name, current_user
                      - if current_user.projects.any?
                        %li.divider
                        - current_user.projects.each do |project|
                          %li= link_to project.name, project
                      %li.divider
                      %li= link_to 'Invite friends', new_user_invitation_path
                      %li.divider
                      %li= link_to 'Log out', destroy_user_session_path, method: :delete
                - else
                  %li= link_to 'Sign up', new_user_registration_path
                  %li.dropdown
                    %a.dropdown-toggle{"data-toggle" => "dropdown", href: '#' }
                      Log in
                      %strong.caret
                    .dropdown-menu{:style => "padding: 15px; padding-bottom: 0px;"}
                      = render 'devise/sessions/form'

            .alert-flash= bootstrap_flash

      #main
        - if content_for?(:no_container)
          = yield(:no_container)
        - else
          .container
            #content
              = yield

      #push

    %footer
      .container
        %ul
          %li= link_to 'Invite friends', new_user_invitation_path
          -# %li= link_to 'Search', search_path
          %li= link_to 'New project', new_project_path
          %li= link_to 'Help', help_path
          %li
        %ul.pull-right
          %li= link_to content_tag(:i, '', class: 'icon-twitter icon-large').html_safe, 'http://twitter.com/hacksterio', alt: 'Hackster.io on Twitter', class: 'link-icon'
          %li= link_to content_tag(:i, '', class: 'icon-facebook icon-large').html_safe, 'http://www.facebook.com/hacksterio', alt: 'Hackster.io on Facebook', class: 'link-icon'
          %li Hackster.io 2013

    -# = include_gon
    = javascript_include_tag "application"
    = content_for :js
