!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="description" content="Find the right manufacturing partner for your business with our free quote tool")
    %title= content_for?(:title) ? yield(:title) : "Hackster.io - Find a manufacturer"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    <link href="#{ asset_path 'favicon.ico' }" rel="shortcut icon" type="image/vnd.microsoft.icon">
    - unless current_user and current_user.is? :admin
      = render partial: 'shared/analytics', locals: { tracker: 'UA-11926897-15', domain: 'hackster.io' }
    = content_for :header

  %body
    #wrapper
      .navbar.navbar-static-top
        .container{ style: 'position: relative;' }
          %a.btn.btn-default.navbar-btn(data-target=".navbar-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to image_tag('hackster_logo_20.png'), root_path, class: 'brand'
          .alert-flash= bootstrap_flash

      #main
        - if content_for?(:no_container)
          = yield(:no_container)
        - else
          .container
            #content
              = yield

      #push

    %footer
      .container
        %ul
          %li= link_to 'Contact', 'mailto:team@hackster.io'
          %li= link_to 'Sign in', new_user_session_url(subdomain: 'beta')
          %li
        %p &copy; Hackster.io 2013

    -# = include_gon
    = javascript_include_tag "application"
    = content_for :js
