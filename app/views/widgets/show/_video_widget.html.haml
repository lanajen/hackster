- video = widget.video
- width = 420
- if video
  .video{ style: "width:#{width}px;height:#{width*video.ratio_height/video.ratio_width}px" }
    - if video.provider == 'youtube'
      <iframe width="100%" height="100%" src="http://www.youtube.com/embed/#{video.id_for_provider}?rel=0" frameborder="0" allowfullscreen></iframe>
    - elsif video.provider == 'vimeo'
      <iframe src="http://player.vimeo.com/video/#{video.id_for_provider}" width="100%" height="100%" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
    - elsif video.provider == 'ustream'
      <iframe width="100%" height="100%" src="http://www.ustream.tv/embed/#{video.id_for_provider}?v=3&amp;wmode=direct" scrolling="no" frameborder="0" style="border: 0px none transparent;"></iframe>