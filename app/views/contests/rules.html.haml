%section#teaser{ style: "background-image: url(#{@contest.cover_image})"}
  #teaser-container.wrapper700
    %h1= @contest.name

%section#rules
  .wrapper
    %h2 Challenge description
    = @contest.description.html_safe

    %h2 Prizes
    .row
      - @contest.prizes.each do |prize|
        .col-xs-12.col-md-6
          %strong
            %i.fa.fa-gift
            = prize.name
          %p= prize.description

    %h2 Eligibility
    = @contest.eligibility.html_safe

    %h2 Requirements
    = @contest.requirements.html_safe

    %h2 Judging criteria
    = @contest.judging_criteria.html_safe

    %h2 How to enter
    = @contest.how_to_enter.html_safe

    %h2 Full rules
    = @contest.rules.html_safe