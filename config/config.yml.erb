development:
  full_host: www.hackster.io:5000
  default_host: www.hackster.io
  default_domain: hackster.io
  default_port: 5000
  send_emails: false
  workers_running: false
  stats_url: www.localhost.local:5000
  use_ssl: <%= ENV['USE_SSL'] == 'true' %>

test:
  full_host: www.localhost.local
  default_host: www.localhost.local
  default_domain: localhost.local
  default_port: 31337
  port_required: false
  send_emails: false
  workers_running: false
  purging_enable: false
  stats_url: www.localhost.local:5000
  use_ssl: false

production:
  full_host: <%= ENV['SUBDOMAIN'] %>.hackster.io
  default_host: <%= ENV['SUBDOMAIN'] %>.hackster.io
  default_domain: hackster.io
  default_port: <%= ENV['USE_SSL'] == 'true' ? 443 : 80 %>
  port_required: false
  send_emails: true
  workers_running: <%= ENV['WORKERS_RUNNING'] == 'true' %>
  stats_url: <%= ENV['STATS_URL'] %>
  use_ssl: <%= ENV['USE_SSL'] == 'true' %>